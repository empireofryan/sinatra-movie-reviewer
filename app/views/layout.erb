      </div>
      <%end %>

    </nav>
    <div class="container">
      <h1 style="text-align:center">Sinatra Travel Operator</h1>
      <% if !@error_message.nil? %>
      <div class="alert alert-warning">
        <%= @error_message %>
      </div>
    <% end %>
